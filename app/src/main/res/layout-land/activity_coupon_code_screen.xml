<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    android:gravity="center"
    android:keepScreenOn="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:baselineAligned="false"
        android:orientation="horizontal"
        tools:ignore="UselessParent">


        <!--
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:orientation="vertical"
                    tools:ignore="NestedWeights">



                </LinearLayout>-->


        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:contentDescription="TODO"
            android:src="@drawable/logo" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="-82dp"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/ll_coupon_code"
                android:layout_width="@dimen/_400sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:keepScreenOn="true"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:visibility="visible"
                tools:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center"
                    android:text=" Please Enter "
                    android:textColor="@color/textcolor"
                    android:textSize="26sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center"
                    android:text="Coupon Code"
                    android:textColor="@color/textcolor"
                    android:textSize="26sp" />


                <EditText
                    android:id="@+id/editCouponCodeEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginVertical="@dimen/_20sp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:autofillHints=""
                    android:background="@drawable/edit_focus"
                    android:contentDescription="@string/mr_button_content_description"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center|start"
                    android:hint="Enter Coupon Code"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_15sp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/default_text"
                    android:textSize="@dimen/_16sdp"
                    tools:ignore="RtlSymmetry" />

                <Button
                    android:id="@+id/bt_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/button_focus"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:onClick="bt_ok_coupon"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="OK"
                    android:textAllCaps="false"
                    android:textColor="@color/btn_txt_color"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bt_skip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/button_focus"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:onClick="bt_verified_login"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="Skip"
                    android:textAllCaps="false"
                    android:textColor="@color/btn_txt_color"
                    android:textSize="@dimen/_16sdp"
                    android:visibility="gone"
                    android:textStyle="bold" />




            </LinearLayout>



        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>


</LinearLayout>