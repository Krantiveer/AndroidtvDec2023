<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="@color/main_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_below="@+id/txt_signin"
            android:backgroundTint="@color/color_bg"
            android:id="@+id/lytTopCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_100sdp"
            android:elevation="0dp"
            app:cardCornerRadius="@dimen/_5sdp">

            <LinearLayout
                android:padding="@dimen/_5sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_margin="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:id="@+id/lytTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_signin"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imguser"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/user_image" />

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:gravity="start|center"
                            android:orientation="vertical">

                            <TextView
                                android:fontFamily="@font/roboto_medium"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:id="@+id/userName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_signin"
                                android:text="@string/user_name"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:maxLines="1"
                                android:singleLine="true"
                                android:id="@+id/userSubId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_signin"
                                android:fontFamily="@font/roboto_medium"
                                android:layout_toEndOf="@+id/userid"
                                android:gravity="center"
                                android:text="subscriber: id"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                        <View

                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:background="@color/appmaincolor" />

                        <TextView
                            android:gravity="center|start"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_medium"
                            android:id="@+id/tvMobileNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_signin"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:background="@color/appmaincolor" />

                        <TextView
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_medium"
                            android:id="@+id/userEmailTv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_signin"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>


                    <androidx.appcompat.widget.AppCompatButton

                        android:id="@+id/sign_out_button"
                        android:textStyle="normal"
                        android:background="@drawable/round_ll"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Log Out"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp" />


                </LinearLayout>


                <TextView
                    android:fontFamily="@font/roboto_medium"
                    android:id="@+id/expireDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lytTopCard"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="Media Purchases"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />

                <LinearLayout
                    android:padding="@dimen/_10sdp"
                    android:layout_margin="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/login_background"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvnoPlan"
                        android:padding="@dimen/_20sdp"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lytTopCard"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:text="No Data to Display"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/lytPlan"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/myPackageName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:gravity="center|start"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="normal"
                            android:visibility="visible" />


                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/lytPlan2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/myPackagePrice"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="end"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:gravity="end|center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="normal"
                            android:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/myPackageDateTime"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="end"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:gravity="end|center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="normal"
                            android:visibility="visible" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <ProgressBar
            android:indeterminateTint="@color/colorGold"
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />


    </RelativeLayout>
</layout>