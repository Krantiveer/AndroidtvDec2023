<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/episode_ll"
    android:layout_width="match_parent"
    android:layout_height="105sp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@drawable/round_ll_tvseries_season"
    android:orientation="horizontal"
    android:padding="@dimen/corner_radius_series"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_seires_episode"

        android:orientation="horizontal"

        android:padding="5dp">
        <!-- <androidx.cardview.widget.CardView
             android:layout_width="160sp"
             android:layout_height="90sp"
             android:layout_margin="5dp"
             android:elevation="10dp"
             app:cardCornerRadius="10dp">

             <ImageView
                 android:id="@+id/episode_image"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:scaleType="fitXY"
                 android:src="@drawable/banner_image" />

         </androidx.cardview.widget.CardView>-->

        <androidx.cardview.widget.CardView
            android:layout_width="160sp"
            android:layout_height="90sp"
            android:layout_gravity="center"
            android:layout_margin="4sp"
            android:backgroundTint="@color/transparent"
            android:elevation="10dp"
            app:cardCornerRadius="4dp">

            <ImageView
                android:id="@+id/episode_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/transparent"
                android:contentDescription="@string/hint_image"
                android:scaleType="fitXY"
                android:src="@drawable/poster_placeholder_land" />


            <ImageView
                android:id="@+id/premiumIconImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="5sp"
                android:contentDescription="@string/contentDescription"
                android:src="@drawable/prime_icon"
                android:visibility="gone"
                tools:visibility="visible" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="bottom"
                android:layout_marginTop="2sp"
                android:background="@drawable/bg_gradient_soft_new"
                android:contentDescription="@string/contentDescription"
                android:ellipsize="end"
                android:paddingStart="4sp"
                android:paddingEnd="4sp"
                android:paddingBottom="5sp"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/title_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="2sp"
                android:background="@drawable/bg_gradient_soft_new"
                android:ellipsize="marquee"
                android:fontFamily="@font/vag_rounded_regular"
                android:maxLines="1"
                android:paddingStart="4sp"
                android:paddingEnd="4sp"
                android:paddingBottom="5sp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="gone"
                tools:text="title movie" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1sp"
            android:layout_marginStart="10sp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/episode_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Movie Title"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/episode_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 min"
                android:drawablePadding="5dp"
                android:gravity="end"
                android:drawableStart="@drawable/clock"
                android:layout_alignParentEnd="true"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/episode_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/episode_title"
                android:text="Please enjoy eposide and dont forgot to like  over ott platfrom enjoy coding and list. the best ott application we are using now theeposide and dont forgot to like  over ott platfrom enjoy coding and list. the best ott application we are using now the  "
                android:textColor="#8E9AB7"
                android:textSize="14dp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/seasons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:bottomLeftRadius="30dp"
            android:bottomRightRadius="30dp"
            android:focusable="true"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:paddingEnd="10dp"
            android:paddingBottom="8dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:topLeftRadius="30dp"
            android:topRightRadius="30dp" />

        <TextView
            android:id="@+id/episode_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"

            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_toEndOf="@id/seasons"
            android:layout_toRightOf="@id/seasons"
            android:bottomLeftRadius="30dp"
            android:bottomRightRadius="30dp"
            android:focusable="true"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:paddingEnd="10dp"
            android:paddingBottom="8dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:topLeftRadius="30dp"
            android:topRightRadius="30dp"

            />
    </LinearLayout>
</LinearLayout>