<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.SearchPhandoUVTVFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_color"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Search"
                    android:visibility="gone"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_30sdp" />


                <EditText
                    android:id="@+id/edtsearchh"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_20sdp"
                    android:autofillHints=""
                    android:background="@drawable/edit_focus"
                    android:contentDescription="@string/mr_button_content_description"
                    android:hint="@string/searchhint"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_15sp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/default_text"
                    tools:ignore="RtlSymmetry" />

                <ImageButton
                    android:id="@+id/btnsearch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/button_menu_normal"
                    android:nextFocusLeft="@+id/edtsearch"
                    android:src="@drawable/lb_ic_in_app_search"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/recommended_for_you"
                    android:id="@+id/recommendedforyou"
                    android:layout_marginHorizontal="@dimen/_22sdp"
                    android:layout_marginVertical="@dimen/_12sdp"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_22sdp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginHorizontal="@dimen/_22sdp"
                    android:id="@+id/rvRecommended"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/divider"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_ll"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="5"
                    tools:listitem="@layout/banner_home_list_item" />

                <LinearLayout
                    android:id="@+id/lytFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_22sdp"

                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView

                        android:id="@+id/rvSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/divider"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/round_ll"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="5" />


                    <!-- <FrameLayout
                         android:visibility="gone"
                         android:id="@+id/searchFragment"
                         android:name="com.ott.tv.fragments.SearchFragmentPhando"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_marginTop="2sp" />-->
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="#a2000000"
                android:visibility="gone">

            </RelativeLayout>
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBarSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>