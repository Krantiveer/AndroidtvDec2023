<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context=".ui.activity.DetailsActivity"
    tools:ignore="MissingDefaultResource">

    <FrameLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:visibility="visible">

        <ImageView
            android:id="@+id/bannerImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/image_description"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="220dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/main_image_container"
                android:layout_width="200dp"
                android:layout_height="240dp">

                <ImageView
                    android:id="@+id/thumbnail_image"
                    android:layout_width="200dp"
                    android:layout_height="240dp"
                    android:layout_alignParentStart="true"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/image_description"
                    android:scaleType="fitXY"
                    android:src="@drawable/placeholder_live_channel"
                    android:visibility="gone" />


            </RelativeLayout>

            <TextView
                android:id="@+id/primary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_image_container"
                android:layout_gravity="start"
                android:layout_marginStart="4sp"
                android:layout_marginTop="2sp"
                android:layout_marginEnd="4sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/extra_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/primary_text"
                android:layout_gravity="start"
                android:layout_marginStart="4sp"
                android:layout_marginTop="2sp"
                android:layout_marginEnd="4sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_989898"
                android:textSize="12sp" />
        </RelativeLayout>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/details_fragment_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_8"
            android:keepScreenOn="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_detailpage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/premiumIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/margin_start_detail"
                    android:contentDescription="@string/contentDescription"
                    android:gravity="center"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:src="@drawable/prime_icon"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/movie_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_detail"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:text="@string/movie_title"
                    android:textColor="@color/detailTitle"
                    android:textSize="@dimen/_25sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/movie_description_tv"
                    android:layout_width="580sp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_detail"
                    android:ellipsize="end"
                    android:fontFamily="@font/amazon"
                    android:maxLines="3"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:text="Kanthan â€“ The Lover of Colour is a 2018 Indian Malayalamlanguage drama film written by Pramod Kooveri and directed by Shareef Eesa. It is produced by Shareef Easa under the banner of Rolling Pix" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_detail"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/content_rating_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/content_rating_image" />

                    <TextView
                        android:id="@+id/content_rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="9.0" />

                    <ImageView
                        android:id="@+id/content_duration_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@drawable/clock" />

                    <TextView
                        android:id="@+id/duration_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        tools:text="9hr " />

                    <ImageView
                        android:id="@+id/releasedate_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@drawable/calendar_day" />

                    <TextView
                        android:id="@+id/tvReleaseDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="9.0" />

                    <ImageView
                        android:id="@+id/language_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@drawable/language_image" />

                    <TextView
                        android:id="@+id/language_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="English" />

                    <ImageView
                        android:id="@+id/maturity_rating_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@drawable/user_image" />

                    <TextView
                        android:id="@+id/maturity_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="All Age" />

                    <ImageView
                        android:id="@+id/genres_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@drawable/genes_image" />

                    <TextView
                        android:id="@+id/genres_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Drama" />


                    <!--  <TextView
                          android:id="@+id/duration_time"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="1 hr 40 min"

                          />-->

                    <ImageView
                        android:id="@+id/tvVideoQualityType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@drawable/ic_baseline_hd_24"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_detail"
                    android:layout_marginTop="6sp"
                    android:layout_marginBottom="6sp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/tvWatchNow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/round_ll_detail_button"
                        android:bottomLeftRadius="30sp"
                        android:bottomRightRadius="30sp"
                        android:drawableStart="@drawable/ic_watchnow"
                        android:drawablePadding="13sp"
                        android:focusable="true"
                        android:focusedByDefault="true"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="8dp"
                        android:text="@string/watch_now"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:topLeftRadius="30dp"
                        android:topRightRadius="30dp"
                        android:visibility="visible"
                        tools:text="Watch Now"
                        tools:visibility="visible" />



                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/tvWatchTrailer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/round_ll_detail_button"
                        android:bottomLeftRadius="30dp"
                        android:bottomRightRadius="30dp"
                        android:drawableStart="@drawable/ic_baseline_local_trailer_24"
                        android:drawablePadding="13sp"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="8dp"
                        android:text="@string/hint_watch_trailer"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:topLeftRadius="30dp"
                        android:topRightRadius="30dp"
                        android:visibility="gone"
                        tools:text="Watch Trailer"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/imgWatchList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/round_ll_detail_button"
                        android:bottomLeftRadius="30dp"
                        android:bottomRightRadius="30dp"
                        android:drawableStart="@drawable/ic_baseline_add_24"
                        android:drawablePadding="13sp"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="8dp"
                        android:text="@string/add_watchlist"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:topLeftRadius="30dp"
                        android:topRightRadius="30dp"
                        android:visibility="gone"
                        tools:text="@string/add_watchlist"
                        tools:visibility="visible" />



                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/img_series"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/round_ll_detail_button"
                        android:bottomLeftRadius="30dp"
                        android:bottomRightRadius="30dp"
                        android:drawableStart="@drawable/ic_episode"
                        android:drawablePadding="13sp"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="8dp"
                        android:text="@string/browse_all_seasons_and_episodes"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:topLeftRadius="30dp"
                        android:topRightRadius="30dp"

                        android:visibility="gone"
                        tools:text="Browse all Seasons and Episodes"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/imgFavList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/round_ll_detail_button"
                        android:bottomLeftRadius="30dp"
                        android:bottomRightRadius="30dp"
                        android:drawableStart="@drawable/ic_baseline_favorite_border_24"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="8dp"
                        android:text="@string/add_favlist"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:topLeftRadius="30dp"
                        android:topRightRadius="30dp"
                        android:visibility="gone"
                        tools:text="@string/add_favlist"
                        tools:visibility="gone" />

                    <!--
                                            <androidx.fragment.app.FragmentContainerView
                                                android:id="@+id/detailsFragment"
                                                android:name="com.ott.tv.fragments.DetailsFragment"
                                                android:layout_width="match_parent"
                                                android:padding="-320dp"
                                                android:paddingTop="-300sp"
                                                android:layout_height="wrap_content"

                                                tools:context="com.ott.tv.ui.activity.DetailsActivityPhando" />
                    -->
                </LinearLayout>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/detailsFragment"
                    android:name="com.ott.tv.fragments.DetailsFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-100dp"
                    android:background="@color/transparent"
                    tools:context="com.ott.tv.ui.activity.DetailsActivityPhando"
                    tools:layout="@layout/banner_home_list_item_movies" />

                <RelativeLayout
                    android:id="@+id/rlplayer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:keepScreenOn="true"
                    android:visibility="gone"
                    tools:context=".MainActivity">


                    <!--Widget for exoplayer view-->

                    <com.google.android.exoplayer2.ui.PlayerView
                        android:id="@+id/video_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:keepScreenOn="true"
                        android:visibility="gone" />

                    <!-- <ImageView
                         android:id="@+id/indicatorImageView"
                         android:layout_width="40dp"
                         android:layout_height="40dp"
                         android:layout_centerInParent="true"
                         android:contentDescription="@string/image_description"
                         android:src="@drawable/ic_baseline_dataloading_24"
                         tools:visibility="visible" />-->
                </RelativeLayout>


                <!--
                                        <androidx.fragment.app.FragmentContainerView
                                            android:id="@+id/detailsFragment"
                                            android:name="com.ott.tv.fragments.DetailsFragment"
                                            android:layout_width="match_parent"
                                            android:padding="-320dp"
                                            android:paddingTop="-300sp"
                                            android:layout_height="wrap_content"

                                            tools:context="com.ott.tv.ui.activity.DetailsActivityPhando" />
                -->

            </LinearLayout>


            <LinearLayout
                android:id="@+id/details_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genre: horror, movie , film "
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:id="@+id/genres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                </LinearLayout>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Director:"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/director_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Director: Some guy"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cast &amp; Crew : "
                    android:visibility="gone"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/cast_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>
        <!--  <com.google.android.exoplayer2.ui.PlayerView
              android:layout_width="300dp"
              android:id="@+id/player_view"
              android:layout_gravity="right|top"
              android:layout_height="300dp"/>
          -->

        <ProgressBar
            android:id="@+id/progress_indicator"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_170sdp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="@color/progressbar"
            android:indeterminateTintMode="src_atop"
            android:padding="36dp"
            android:visibility="visible" />

        <LinearLayout

            android:id="@+id/episode_rv_ll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/black_color"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="1"
            tools:visibility="gone">

            <TextView
                android:id="@+id/movie_title_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:paddingStart="@dimen/_50sdp"
                android:paddingTop="@dimen/_20sdp"
                android:text="@string/movie_title"
                android:textColor="@color/detailTitle"
                android:textSize="32sp" />

            <LinearLayout
                android:id="@+id/episode_rv"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_30sdp"
                android:orientation="horizontal"
                android:weightSum="1"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_SeasonList"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/movie_title_two"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_50sdp"
                        android:focusable="true"
                        android:scrollbars="vertical"
                        tools:itemCount="6"
                        tools:listitem="@layout/layout_season" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".55"
                    android:background="@color/black_color">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_EpisodeList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/black_color"
                        android:focusable="true"
                        tools:itemCount="4"
                        tools:listitem="@layout/layout_episode"

                        />

                </LinearLayout>

                <!--   <TextView
                       android:id="@+id/movie_title_two"
                       android:layout_width="@dimen/_300sdp"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="50sp"
                       android:layout_marginTop="40sp"
                       android:paddingTop="@dimen/_40sdp"
                       android:text="@string/movie_title"
                       android:textColor="@color/detailTitle"
                       android:textSize="36sp"
                   />

                   <androidx.recyclerview.widget.RecyclerView
                       android:id="@+id/rv_SeasonList"
                       android:layout_width="@dimen/_250sdp"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/movie_title_two"
                       android:layout_marginStart="@dimen/_50sdp"
                       android:layout_marginTop="@dimen/_50sdp"
                       android:layout_marginEnd="@dimen/_50sdp"
                       android:focusable="true"
                       android:scrollbars="vertical"
                       tools:itemCount="2"
                       tools:listitem="@layout/layout_season" />

                  -->
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>