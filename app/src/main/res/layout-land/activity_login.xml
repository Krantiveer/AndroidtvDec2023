<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    android:gravity="center"
    android:keepScreenOn="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:baselineAligned="false"
        android:orientation="horizontal"
        tools:ignore="UselessParent">


        <!--
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:orientation="vertical"
                    tools:ignore="NestedWeights">



                </LinearLayout>-->


        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_82sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:contentDescription="TODO"
            android:src="@drawable/logo" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="-82dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="@dimen/_400sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="-30dp"
                android:gravity="center_vertical"
                android:keepScreenOn="true"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:text="@string/login_with_email"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/textcolor"
                    android:textSize="26sp" />

                <!--      <EditText
                          android:id="@+id/email_edit_text"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:layout_marginRight="20dp"
                          android:autofillHints=""
                          android:hint="@string/email_address"
                          android:inputType="textEmailAddress" />-->
                <EditText

                    android:textSize="@dimen/_16sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/email_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:autofillHints=""
                    android:background="@drawable/edit_focus"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_15sp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"

                    android:textColor="@color/white"
                    android:textColorHint="@color/default_text"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:textSize="@dimen/_16sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/password_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_focus"
                    android:hint="@string/password"
                    android:importantForAutofill="no"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_15sp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/default_text"
                    tools:ignore="RtlSymmetry" />

                <ProgressBar
                    android:id="@+id/progress_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:indeterminateTint="@color/colorGold"
                    android:visibility="gone"
                    tools:visibility="gone" />

                <!--    <Button
                        android:id="@+id/validate_button"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button_focus"
                        android:onClick="loginBtn"
                        android:text="@string/login" />-->

                <Button
                    android:fontFamily="@font/roboto_medium"
                    android:id="@+id/validate_button_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/button_focus"
                    android:gravity="center"
                    android:onClick="loginBtn"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="@string/login"
                    android:textAllCaps="false"
                    android:textColor="@color/btn_txt_color"
                    android:textSize="@dimen/_16sdp"

                    />

                <Button
                    android:fontFamily="@font/roboto_medium"
                    android:id="@+id/phone_signIn_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_focus"
                    android:drawableStart="@drawable/ic_baseline_phone_android_24"
                    android:onClick="mobileSignInBtnMobile"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="@string/fui_sign_in_with_phone"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_16sdp" />


            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>


</LinearLayout>