<?xml version="1.0" encoding="utf-8"?><!--suppress ALL -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    android:keepScreenOn="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/login_background"
        android:gravity="start"
        android:keepScreenOn="true"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_logotop"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:contentDescription="TODO"
            android:src="@drawable/logo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/login_background"
            android:baselineAligned="false"
            android:orientation="horizontal"
            tools:ignore="UselessParent">


            <LinearLayout
                android:id="@+id/qrscreenll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_36sdp"
                android:layout_weight="1"
                android:gravity="top"
                android:visibility="visible"
                android:orientation="vertical"
                tools:ignore="NestedWeights">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_45sdp"
                    android:orientation="vertical"
                    android:visibility="visible"

                    tools:ignore="UselessParent">

                    <!--   <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="15dp"
                           android:text="On the UVTV Mobile App"
                           android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                           android:textSize="28sp" />-->
                    <!--                Login to www.uvplay.com/activatetv
                                    or scan the QR code from Camera App or any QR Reader
                                    and enter the following code to Activate TV-->
                    <LinearLayout
                        android:id="@+id/qrcodetext"
                        android:layout_width="wrap_content"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Login to "
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/qrcodebaseurl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:textColor="@color/blue_400"
                            android:textSize="15sp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/qrcodetext_sec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="or scan the QR code from Camera App or any QR Reader and enter the following code to Activate TV"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/ll_qr_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_36sdp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView

                            android:id="@+id/qrcode_demo_image"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_150sdp"
                            android:background="@drawable/rounded_black_transparent"

                            android:backgroundTint="@color/black_color"
                            android:src="@drawable/qrcode_demo_image"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <ImageView
                                android:id="@+id/qrcode_demo_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/qrcode_demo_image" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_qrCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_27sdp"
                            android:background="@drawable/textview_border_dot"
                            android:fontFamily="@font/roboto_medium"
                            android:paddingStart="@dimen/_20sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingEnd="@dimen/_20sdp"
                            android:paddingBottom="@dimen/_8sdp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_25sdp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            tools:text="XYXABC"
                            tools:visibility="visible" />
                    </LinearLayout>

                    <!--          <ImageView
                                  android:layout_width="@dimen/_140sdp"
                                  android:layout_height="@dimen/_140sdp"
                                  android:layout_gravity="center_horizontal"
                                  android:contentDescription="@string/image_description"
                                  android:scaleType="fitXY"
                                  android:src="@drawable/logosign"
                                  android:visibility="visible" />-->


                    <!--   <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="5dp"
                        android:text="@string/login_using_your_email_address"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textSize="30sp" />-->

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/or_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_26sdp"
                android:layout_marginVertical="28dp"
                android:src="@drawable/or_login" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="NestedWeights">
                <ImageView
                    android:id="@+id/iv_naaptol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:src="@drawable/logo_splash"
                    android:visibility="gone"
                    tools:visibility="gone" />

                <Button
                    android:id="@+id/login_mobile"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/_400sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginHorizontal="@dimen/_20sp"
                    android:layout_marginTop="@dimen/_20sp"
                    android:background="@drawable/button_focus"
                    android:drawableStart="@drawable/mobile_alt"
                    android:focusedByDefault="true"
                    android:gravity="center"
                    android:onClick="mobileSignInBtn"
                    android:paddingStart="20dp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="@string/fui_sign_in_with_phone"
                    android:textAllCaps="false"
                    android:textColor="@color/btn_txt_color"
                    android:textSize="@dimen/_16sdp" />


                <Button
                    android:id="@+id/phone_signIn_button"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_focus"
                    android:drawableStart="@drawable/ic_baseline_phone_android_24"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/fui_sign_in_with_phone"
                    android:textAllCaps="true"
                    android:visibility="gone" />


                <Button
                    android:id="@+id/login_email"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_60sdp"
                    android:minWidth="@dimen/_400sdp"

                    android:layout_margin="@dimen/_20sp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_focus"
                    android:defaultFocusHighlightEnabled="true"
                    android:drawableStart="@drawable/envelope"
                    android:onClick="emailSignInBtn"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Login with Email"
                    android:textAllCaps="false"
                    android:textColor="@color/btn_txt_color"
                    android:textSize="@dimen/_16sdp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/google_signIn_button"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_focus"
                    android:drawableStart="@drawable/fui_ic_googleg_color_24dp"
                    android:paddingStart="20dp"
                    android:text="@string/continue_with_google"
                    android:textAllCaps="true"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/colorGold"
        android:visibility="gone"
        tools:visibility="gone" />


</LinearLayout>