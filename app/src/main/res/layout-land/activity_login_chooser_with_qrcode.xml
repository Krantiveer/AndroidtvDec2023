<?xml version="1.0" encoding="utf-8"?><!--suppress ALL -->
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    android:keepScreenOn="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"

        android:gravity="start"
        android:keepScreenOn="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_105sdp"
            android:layout_gravity=""
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:contentDescription="TODO"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="15dp"
            android:text="@string/Welcome_login_chooser"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="30sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal"
            tools:ignore="UselessParent">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:gravity="top"
                android:orientation="vertical"
                tools:ignore="NestedWeights">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:orientation="vertical"
                    android:visibility="visible"
                    tools:ignore="UselessParent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="On the UVTV Mobile App"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="1. Login with your UVTV account."
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="2. Go to Activate TV in the Settings Menu."
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="3. Scan QR Code to Login."
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/qrcode_demo"

                        />


                    <!--          <ImageView
                                  android:layout_width="@dimen/_140sdp"
                                  android:layout_height="@dimen/_140sdp"
                                  android:layout_gravity="center_horizontal"
                                  android:contentDescription="@string/image_description"
                                  android:scaleType="fitXY"
                                  android:src="@drawable/logosign"
                                  android:visibility="visible" />-->


                    <!--   <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="5dp"
                        android:text="@string/login_using_your_email_address"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textSize="30sp" />-->

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Welcome to UVTV"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/_35sdp"
                android:layout_height="300dp"

                android:layout_marginVertical="8dp"
                android:background="@drawable/or_login" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_weight="1"
                android:keepScreenOn="true"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <Button
                    android:id="@+id/phone_signIn_button"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_focus"
                    android:drawableStart="@drawable/ic_baseline_phone_android_24"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/fui_sign_in_with_phone"
                    android:textAllCaps="true"
                    android:visibility="gone" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_20sp"
                    android:layout_marginTop="@dimen/_20sp"
                    android:background="@drawable/button_focus"
                    android:drawableStart="@drawable/mobile_alt"
                    android:gravity="center"
                    android:onClick="mobileSignInBtn"
                    android:paddingStart="20dp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="@string/fui_sign_in_with_phone"
                    android:textAllCaps="false"
                    android:textColor="@color/btn_txt_color"
                    android:textSize="@dimen/_14sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_margin="@dimen/_20sp"
                    android:background="@drawable/button_focus"
                    android:drawableStart="@drawable/envelope"
                    android:focusedByDefault="true"
                    android:onClick="emailSignInBtn"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textStyle="bold"
                    android:text="Login with Email"
                    android:textAllCaps="false"
                    android:textColor="@color/btn_txt_color" />

                <Button
                    android:id="@+id/google_signIn_button"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_focus"
                    android:drawableStart="@drawable/fui_ic_googleg_color_24dp"
                    android:paddingStart="20dp"
                    android:text="@string/continue_with_google"
                    android:textAllCaps="true" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/colorGold"
        android:visibility="gone"
        tools:visibility="gone" />


</androidx.appcompat.widget.LinearLayoutCompat>