        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/_4sdp" />
            <stroke android:width="@dimen/_2sdp" android:color="@color/colorButtonFocusedTVHome" />
            <solid android:color="@color/colorButtonFocusedTVHome"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/_4sdp" />
            <stroke android:width="@dimen/_2sdp" android:color="@color/colorButtonUnselectedTV" />
            <gradient android:angle="-90" android:startColor="@color/colorButtonUnselectedTV" android:endColor="@color/colorButtonUnselectedTV" />
        </shape>
    </item>
</selector>