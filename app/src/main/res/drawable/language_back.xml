<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/_4sdp" />
            <stroke android:width="@dimen/_2sdp" android:color="@color/colorButtonFocusedTVHome" />
            <gradient android:angle="-90" android:startColor="@color/colorButtonFocusedTVHome" android:endColor="@color/colorButtonFocusedTVHome"  />
        </shape>
    </item>
