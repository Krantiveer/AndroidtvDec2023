<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/_4sdp" />
            <gradient android:angle="-180" android:startColor="@color/side_nav_highlited" android:endColor="@color/side_nav_highlited"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/_4sdp" />
            <solid android:color="@color/side_nav_highlited"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/_4sdp" />
            <stroke android:width="1dip" android:color="@color/colorButtonUnselectedTV" />
            <gradient android:angle="-90" android:startColor="@color/colorButtonUnselectedTV" android:endColor="@color/colorButtonUnselectedTV" />
        </shape>
    </item>
</selector>