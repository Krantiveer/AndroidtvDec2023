<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_gravity="center"
    android:background="@color/black_color"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_380sdp"
        android:background="@drawable/bg_gradient_soft">

        <include
            android:id="@+id/headerView"
            layout="@layout/content_details_activity_layout_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="237sp"
        android:layout_marginBottom="6sp">

        <RelativeLayout
            android:id="@+id/relativeLayoutBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/banner_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_70sdp"
                android:layout_marginBottom="@dimen/_120sdp"
                android:fontFamily="@font/poppins_regular"
                android:padding="@dimen/_30sdp"
                android:text="@string/latest_movies"
                android:visibility="gone" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/banner_title"
                android:layout_marginStart="@dimen/_30sdp"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:reverseLayout="false"
                tools:itemCount="1"
                tools:listitem="@layout/banner_home_list_item"
                tools:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewBannerBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recyclerViewBanner"
                android:layout_marginTop="6dp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/banner_home_list_item_movies" />
        </RelativeLayout>
    </ScrollView>
    <!--
        <FrameLayout
            android:id="@+id/navmenu"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/navFragment"
                android:name="com.ott.tv.navigation_drawer.HeaderSupportFragment"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="match_parent"
                tools:ignore="Instantiatable" />

        </FrameLayout>
    -->
</FrameLayout>