<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:id="@+id/parentRelativeLayout"
        android:layout_width="192dp"
        android:layout_height="108dp"
        android:gravity="left"
        android:layout_margin="3sp"
        android:orientation="horizontal">

<RelativeLayout
    android:id="@+id/main_image_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main_image"
                android:scaleType="fitXY" />

                <View
                    android:id="@+id/gradient_view_episode"
                    android:background="@drawable/card_gradient"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/freeTagImage"
                    android:layout_width="44dp"
                    android:layout_height="22dp"
                    android:paddingEnd="8dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:background="@drawable/free_badge"
                    android:layout_gravity="top|end"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">

                    <TextView
                        android:id="@+id/episode_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/episode_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/episode_detail"
                        android:singleLine="true"
                        android:textSize="12sp"
                        android:visibility="gone"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <ProgressBar
                android:id="@+id/progress_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateTint="@color/red_highlight_color"
                android:indeterminateTintMode="src_atop"
                android:padding="36dp"
                android:visibility="gone"/>
</RelativeLayout>

        <ProgressBar
            android:id="@+id/progress"
            style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
            android:progressDrawable="@color/white"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:baselineAligned="false"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomText"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginLeft="4sp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
    </LinearLayout>

</LinearLayout>